<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <StackPanel Margin="20">
            <TextBlock Classes="H1" Text="This is a H1 header" />
            <TextBlock Classes="H2" Text="This is a H2 header" />
        </StackPanel>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    <Style Selector="TextBlock.H1">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontFamily" Value="{DynamicResource Exo2-Regular}" />
        <Setter Property="Foreground" Value="{DynamicResource Primary}" />
    </Style>
    
    <Style Selector="TextBlock.H2">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="{DynamicResource Exo2-Regular}" />
        <Setter Property="Foreground" Value="{DynamicResource OnDefaultButton}" />
    </Style>
</Styles>
