<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="900"
             xmlns:vm="clr-namespace:WinRotor.ViewModels"
             Background="{DynamicResource Background}"
             Foreground="{DynamicResource PrimaryForeground}"
             x:Class="WinRotor.Views.HomeView"
             x:DataType="vm:HomeViewModel">
    
    <Design.DataContext><vm:HomeViewModel /></Design.DataContext>
    
    <Grid Classes="pageBackground" RowDefinitions="3*, 5*, 5*, 3*" ColumnDefinitions="*, 2*, *" RowSpacing="20">
        
        <!-- Windows 10 (Rotor PC) -->
        <Border Grid.Row="1" 
                Grid.Column="1"
                Background="{DynamicResource PanelGradient}"
                CornerRadius="8"
                Padding="20">
            
            <Grid RowDefinitions="*, 7*"
                  RowSpacing="30"
                  ColumnSpacing="10">
                
                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           Classes="H1"
                           Text="Rotor Connection Status"/>
                
                <Grid Row="1" ColumnDefinitions="*, *, *">
                    
                    <!-- Connection Information -->
                    <Grid Row="0"
                          Column="0"
                          RowSpacing="2"
                          RowDefinitions="*, *, *, *">
                        <StackPanel Grid.Row="0">
                            <TextBlock Classes="connection" Text="Server IP"/> 
                            <TextBlock Classes="digital" Text="192.168.1.2" />
                        </StackPanel>
                        <StackPanel Grid.Row="1">
                            <TextBlock Classes="connection" Text="Port" /> 
                            <TextBlock Classes="digital" Text="5000"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2">
                            <TextBlock Classes="connection" Text="Last Checked"/>
                            <TextBlock Classes="digital" Text="{Binding LastCheckedRotor}"></TextBlock>
                        </StackPanel>
                        <Button Grid.Row="3"
                                Classes="primary" 
                                FontSize="10"
                                Margin="0 10 0 0"
                                Content="Test Connection" 
                                Command="{Binding TestRotorConnectionCommand}"
                                HorizontalAlignment="Left"/>
                    </Grid>
                    
                    <!-- Connection Icon -->
                    <Border Grid.Column="2" 
                            Background="{Binding Path=RotorConnectionStatus, Converter={StaticResource BooleanToColourConverter}}"
                            CornerRadius="8"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <Label Classes="icon" 
                               Content="&#xEB5A;" 
                               FontSize="50"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Grid>
        </Border>
        
        <!-- Windows 7 (WinX32 PC) -->
        <Border Grid.Row="2" 
                Grid.Column="1"
                Background="{DynamicResource PanelGradient}"
                CornerRadius="8"
                Padding="20">
            
            <Grid RowDefinitions="*, 7*"
                  RowSpacing="30"
                  ColumnSpacing="10">
                
                <!-- Header -->
                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           Classes="H1"
                           Text="WinX32 Connection Status"/>
                
                
                <Grid Row="1"
                      ColumnDefinitions="*, *, *">
                    
                    <!-- Connection Information -->
                    <Grid Grid.Row="0"
                          Grid.Column="0"
                          RowSpacing="2"
                          RowDefinitions="*, *, *, *">
                        <StackPanel Grid.Row="0">
                            <TextBlock Classes="connection" Text="Server IP"/> 
                            <TextBlock Classes="digital" Text="192.168.1.1" />
                        </StackPanel>
                        <StackPanel Grid.Row="1">
                            <TextBlock Classes="connection" Text="Port" /> 
                            <TextBlock Classes="digital" Text="5000"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2">
                            <TextBlock Classes="connection" Text="Last Checked"/>
                            <TextBlock Classes="digital" Text="{Binding LastCheckedWinSpec}"/>
                        </StackPanel>
                        <Button Grid.Row="3" 
                                Margin="0 10 0 0"
                                FontSize="10"
                                Classes="primary" 
                                Content="Test Connection" 
                                Command="{Binding TestWinSpecConnectionCommand}"
                                HorizontalAlignment="Left"/>
                    </Grid>
                    
                    <!-- Buttons -->
                    
                    
                    <!-- Connection Icon -->
                    <Border Grid.Column="2" 
                            Background="{Binding Path=WinSpecConnectionStatus, Converter={StaticResource BooleanToColourConverter}}"
                            CornerRadius="8"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <Label Classes="icon" 
                               Content="&#xEB5A;" 
                               FontSize="50"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
