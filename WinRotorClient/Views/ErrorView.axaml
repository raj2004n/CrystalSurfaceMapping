<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:WinRotor.Views"
             xmlns:vm="clr-namespace:WinRotor.ViewModels"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="150"
             Width="300" Height="150"
             MinWidth="300" MinHeight="150"
             x:DataType="vm:ErrorViewModel"
             x:Class="WinRotor.Views.ErrorView">
    <Design.DataContext><vm:ErrorViewModel/></Design.DataContext>
    
    <Grid Margin="10" RowDefinitions="Auto, *">
        <Label Grid.Row="0" Content="{Binding Title}" />
        <TextBox Grid.Row="1" IsReadOnly="True" TextWrapping="Wrap" Text="{Binding Description}" />
    </Grid>
</UserControl>
