<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WinRotor.ViewModels"
             mc:Ignorable="d" 
             Width="400"
             MinWidth="300"
             Foreground="{DynamicResource OnSurface}"
             Background="Transparent"
             x:DataType="vm:FilesListDialogViewModel"
             x:Class="WinRotor.Views.FilesListDialogView">
    
    <Design.DataContext><vm:FilesListDialogViewModel/></Design.DataContext>
    
    <Border 
        Background="{DynamicResource Background}" 
        BorderThickness="0"
        CornerRadius="12" 
        ClipToBounds="True"
        Margin="15">
        
        <Grid RowDefinitions="1*, 3*">
            
            <Border Grid.Row="0" 
                    Background="{DynamicResource SurfaceVariant}"
                    CornerRadius="10 10 0 0">
                <TextBlock 
                    Text="Saved Paths"
                    Padding="10"
                    FontSize="18"
                    FontFamily="{DynamicResource Exo2-SemiBold}"/>
            </Border>

            <Border Grid.Row="1"  
                    Background="{DynamicResource Background}"  
                    CornerRadius="0 0 10 10">
                <Grid RowDefinitions="2*, 1*" RowSpacing="20" Margin="15 15 15 10 ">
                    <ListBox Grid.Row="0" 
                             Classes="filePaths"
                             ItemsSource="{Binding FileItems}" 
                             SelectedItem="{Binding SelectedFile}"
                             AutoScrollToSelectedItem="True">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5" ToolTip.Tip="{Binding FilePath}" ColumnDefinitions="*, Auto">
                                    <StackPanel Grid.Column="0" Orientation="Vertical" Spacing="2">
                                        <TextBlock Text="{Binding Title}" 
                                                   FontFamily="{DynamicResource Exo2-SemiBold}" 
                                                   FontSize="16"/>
                                        <TextBlock Text="{Binding FilePath}" 
                                                   Opacity="0.7" 
                                                   FontSize="12" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <Button Grid.Row="1" Classes="error" 
                            Width="35" 
                            Height="35" 
                            BorderThickness="0" 
                            HorizontalAlignment="Left"
                            Padding="0 0 0.5 0"
                            Command="{Binding DeleteFileCommand}"
                            CommandParameter="{Binding SelectedFile}">
                        <Label FontSize="15" Padding="0" Classes="icon" Content="&#xE4A8;" />
                    </Button>
                    
                    <Grid Grid.Row="1" 
                          ColumnSpacing="10"
                          ColumnDefinitions="*, *" 
                          HorizontalAlignment="Right">
                        <Button Grid.Column="0" Classes="cancel" 
                                Content="Cancel" 
                                Command="{Binding CancelCommand}" />
                        <Button Grid.Column="1" Classes="confirm" 
                                Content="OK" 
                                Command="{Binding ConfirmCommand}" 
                                IsEnabled="{Binding SelectedFile, Converter={x:Static ObjectConverters.IsNotNull}}" />
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
    
</UserControl>