<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WinRotor.ViewModels"
             mc:Ignorable="d" 
             Width="300"
             MinWidth="300"
             Foreground="{DynamicResource OnSurface}"
             Background="Transparent"
             x:Class="WinRotor.Views.InfoDialogView"
             x:DataType="vm:InfoDialogViewModel">
    
    <Design.DataContext><vm:InfoDialogViewModel /></Design.DataContext>
    
    <!-- Main Dialog Window -->
    <Border 
        Background="{DynamicResource Background}" 
        CornerRadius="12" 
        ClipToBounds="True"
        Margin="15">

        <Grid RowDefinitions="1*, 3*">
            <!-- Title -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource Surface}" 
                    CornerRadius="10 10 0 0">
                <TextBlock 
                    Text="{Binding Title}"
                    Padding="10"
                    FontSize="18"
                    FontFamily="{DynamicResource Exo2-SemiBold}"/>
            </Border>
            
            <!-- Description -->
            <Border Grid.Row="1" 
                    Background="{DynamicResource Background}"  
                    Padding="15 15 10 10 "
                    CornerRadius="0 0 10 10">
                <Grid RowDefinitions="2*, 1*" RowSpacing="20">
                    <TextBlock Grid.Row="0"
                               Text="{Binding Message}"
                               FontFamily="{DynamicResource Exo2-Regular}"
                               FontSize="13"
                               TextWrapping="Wrap"/>
                    <Button Grid.Row="1" 
                            Classes="confirm"
                            HorizontalAlignment="Right"
                            Content="{Binding ConfirmText}"
                            Command="{Binding ConfirmCommand}"/>
                </Grid>
                
            </Border>
        </Grid>
    </Border>
   
</UserControl>
